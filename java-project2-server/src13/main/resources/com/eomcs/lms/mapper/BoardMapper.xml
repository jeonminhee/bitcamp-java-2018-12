<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="BoardMapper">

<resultMap type="board" id="boardMap">
<id column="board_id" property="no"/>
<result column="conts" property="contents"/>
<result column="cdt" property="createdDate"/>
<result column="vw_cnt" property="viewCount"/>
</resultMap>

  <select id="findAll" resultMap="boardMap">
    select
      board_id,
      conts,
      cdt,
      vw_cnt
    from
      lms_board
    order by
      board_id desc
  </select>
  

  <select id="findByNo" resultMap="boardMap" parameterType="int">
    select 
      board_id,
      conts,
      cdt,
      vw_cnt
    from
      lms_board
    where
      board_id = #{value}
  </select>
  
  <insert id="insert" parameterType="board">
	  insert into lms_board(conts) values(#{contents})
  </insert> 
  
  <update id="update" parameterType="board">
    update
      lms_board
    <set>
    <if test="contents != null"> conts=#{contents}</if>
    </set>
    where
      board_id = #{no}
  </update>
  
  <update id="vwcount" parameterType="int">
    update
      lms_board
    set
      vw_cnt = vw_cnt + 1
    where
      board_id = #{no}
  </update>
  
  <delete id="delete" parameterType="int">
    delete
      from
        lms_board
      where
        board_id = #{no}
  </delete>
  
  <select id="findByKeyword" resultMap="boardMap" parameterType="string">
  select
    board_id,
    conts,
    cdt,
    vw_cnt
  from
    lms_board
  where conts like concat('%', #{value}, '%')
    or vw_cnt like concat(#{value})
  order by
    board_id asc
  </select>
  
</mapper>